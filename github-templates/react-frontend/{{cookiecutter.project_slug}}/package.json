{
  "name": "{{ cookiecutter.project_slug }}",
  "version": "0.1.0",
  "description": "{{ cookiecutter.description }}",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext js,jsx{% if cookiecutter.use_typescript == 'y' %},ts,tsx{% endif %}",
    "format": "prettier --write \"src/**/*.{js,jsx{% if cookiecutter.use_typescript == 'y' %},ts,tsx{% endif %},json,css,md}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
{% if cookiecutter.use_tailwind == "y" %}
    ,"@headlessui/react": "^1.7.17",
    "clsx": "^2.0.0"
{% endif %}
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitejs/plugin-react": "^4.2.0",
    "vite": "^5.0.0"
{% if cookiecutter.use_typescript == "y" %}
    ,"typescript": "^5.3.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
{% endif %}
{% if cookiecutter.use_tailwind == "y" %}
    ,"tailwindcss": "^3.3.6",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16"
{% endif %}
    ,"eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.0"
  }
}
